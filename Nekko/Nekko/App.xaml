<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Nekko.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nekko"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <LinearGradientBrush x:Key="RainbowBorderBrush" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="Red" Offset="0.0"/>
                <GradientStop Color="Orange" Offset="0.16"/>
                <GradientStop Color="Yellow" Offset="0.33"/>
                <GradientStop Color="Green" Offset="0.5"/>
                <GradientStop Color="Cyan" Offset="0.66"/>
                <GradientStop Color="Blue" Offset="0.83"/>
                <GradientStop Color="Purple" Offset="1.0"/>
            </LinearGradientBrush>
            <!-- 解决NavigationView的Content背景颜色昏暗的问题 -->
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />


        </ResourceDictionary>

    </Application.Resources>
</Application>
