<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Nekko.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nekko"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">
    <!-- 支持滑条，不然显示不完全 -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- 单列布局 -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <TextBlock Grid.Column="0" Grid.Row="0" x:Name="TextBlock_SummonerInfo"
               Text="Unknown"
               FontSize="25"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0,24,0,10"/>
            <!-- 调整上下边距 -->


            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center"  Margin="0,0,0,10">
                <TextBlock x:Name="TextBlock_SummonerLevel" Text="召唤师等级: 0"  HorizontalAlignment="Center" Margin="0,0,5,0" FontSize="15" FontWeight="SemiBold"/>
            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="2"  x:Name="StackPanel_BasicTags" Orientation="Horizontal"  HorizontalAlignment="Center"/>
            <StackPanel Grid.Column="0" Grid.Row="3"  x:Name="StackPanel_KDATags" Orientation="Horizontal"  HorizontalAlignment="Center"/>

            <!-- 贴图信息显示区域 -->
            <Border Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,20,20,20"
    BorderBrush="White" BorderThickness="1" CornerRadius="5" >
                <!-- XAML -->
                <ListView  x:Name="BattleInfoListView" Width="800" Height="400"  Background="#B3000000">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="125"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Row="0" Grid.Column="0" Source="{Binding ChampionImage}" Stretch="UniformToFill" Height="125" Width="125"/>

                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                                    <TextBlock VerticalAlignment="Center" Margin="10,10,0,0">
                                        <Run Text="位置:"/>
                                        <Run Text="{Binding Location}"/>
                                        <Run Text="结果:"/>
                                        <Run Text="{Binding Win}"/>
                                        <Run Text="  类型:"/>
                                        <Run Text="{Binding GameType}"/>
                                        <Run Text="  战绩K/D/A:"/>
                                        <Run Text="{Binding KDAString}"/>
                                        <Run Text="  KDA:"/>
                                        <Run Text="{Binding KDANumber}"/>
                                        <Run Text="  性价比:"/>
                                        <Run Text="{Binding RealKD}"/>                                      
                                        <Run Text="  团队性:"/>
                                        <Run Text="{Binding TeamKD}"/>
                                    </TextBlock>
                                    <TextBlock VerticalAlignment="Center" Margin="10,10,0,0">
                                        <Run Text="开始时间:"/>
                                        <Run Text="{Binding StartTime}"/>   
                                        <Run Text="  花费时间:"/>
                                        <Run Text="{Binding CostTime}"/>
                                    </TextBlock>
                                    <TextBlock VerticalAlignment="Center" Margin="10,10,0,0" Foreground="Green">
                                        <Run Text="夸夸标签: "/>
                                        <Run Text="{Binding KuaKuaTag}"/>      
                                    </TextBlock>
                                    <TextBlock VerticalAlignment="Center" Margin="10,10,0,0" Foreground="Red">
                                        <Run Text="牛马标签: "/>
                                        <Run Text="{Binding NiuMaTag}"/>   
                                    </TextBlock>
                                </StackPanel>

                            </Grid>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
            
            
            <!-- 按钮 -->
                <Button Grid.Column="0" Grid.Row="5"
            Content="Test"
            HorizontalAlignment="Center"
            Margin="0,16,0,24" 
                     Click="myButton_Click"/>
        </Grid>

    </ScrollViewer>

</Page>
